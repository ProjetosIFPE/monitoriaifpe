<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	metadata-complete="false" id="WebApp_ID" version="3.1">
	<welcome-file-list>
		<welcome-file>acesso.do</welcome-file>
	</welcome-file-list>
	<servlet>
		<servlet-name>LoginForm</servlet-name>
		<jsp-file>/login.jsp</jsp-file>
	</servlet>
	<servlet-mapping>
		<servlet-name>LoginForm</servlet-name>
		<url-pattern>/login.do</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>Home</servlet-name>
		<jsp-file>/home.jsp</jsp-file>
	</servlet>
	<servlet-mapping>
		<servlet-name>Home</servlet-name>
		<url-pattern>/home.do</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>ServletLogin</servlet-name>
		<servlet-class>br.com.projetoperiodo.servlets.ServletLogin</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ServletLogin</servlet-name>
		<url-pattern>/efetuarLogon.do</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>ServletControleAcesso</servlet-name>
		<servlet-class>br.com.projetoperiodo.servlets.ServletControleAcesso</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ServletControleAcesso</servlet-name>
		<url-pattern>/acesso.do</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>ServletLogout</servlet-name>
		<servlet-class>br.com.projetoperiodo.servlets.ServletLogout</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>ServletSenhaLogin</servlet-name>
		<servlet-class>br.com.projetoperiodo.servlets.ServletSenhaLogin</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ServletSenhaLogin</servlet-name>
		<url-pattern>/alterarSenha.do</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ServletLogout</servlet-name>
		<url-pattern>/logout.do</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ServletSenhaLogin</servlet-name>
		<url-pattern>/ServletSenhaLogin</url-pattern>
	</servlet-mapping>

</web-app>
